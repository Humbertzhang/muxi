syntax on
set background=dark
if has("autocmd")
  filetype plugin indent on
endif
set showcmd
set showmatch
set ignorecase
set smartcase
set incsearch
set autowrite
set hidden
set bufhidden=hide
colorscheme slate
set number
set ruler
set shiftwidth=4
set softtabstop=4
set tabstop=4
set hlsearch
set magic
set smartindent
set cmdheight=1
set laststatus=2
set statusline=\ %<%F[%1*%M%*%n%R%H]%=\ %y\ %0(%{&fileformat}\ %{&encoding}\ Ln\ %l,\ Col\ %c/%L%) " 设置在状态行显示的信息
